# ====== DJANGO CORE SETTINGS ======
DJANGO_SECRET_KEY=change-this-to-a-very-long-random-secret-key

# Development default
DJANGO_DEBUG=True

# Comma-separated list of allowed hosts
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,vitohub.org,www.vitohub.org

# Timezone
DJANGO_TIME_ZONE=Africa/Dar_es_Salaam

# ====== DATABASE CONFIGURATION ======
DB_ENGINE=django.db.backends.sqlite3
DB_NAME=db.sqlite3

# For PostgreSQL (Production)
# DB_ENGINE=django.db.backends.postgresql
# DB_NAME=vitotech_prod
# DB_USER=vitotech_user
# DB_PASSWORD=your_secure_database_password
# DB_HOST=localhost
# DB_PORT=5432

# ====== EMAIL CONFIGURATION ======
EMAIL_HOST=mail.privateemail.com
EMAIL_PORT=465
EMAIL_USE_TLS=False
EMAIL_USE_SSL=True
EMAIL_HOST_USER=email@yourdomain.com
EMAIL_HOST_PASSWORD=email_password
DEFAULT_FROM_EMAIL=email@yourdomain.com
NOTIFICATIONS_DEFAULT_RECIPIENT=email@yourdomain.com

# ====== SECURITY & CORS SETTINGS ======
DJANGO_CSRF_TRUSTED_ORIGINS=https://vitohub.org,https://www.vitohub.org

# ====== FILE UPLOAD SETTINGS ======
MAX_UPLOAD_SIZE=5242880

# ====== FRONTEND SETTINGS ======
VITE_API_BASE_URL=http://localhost:8000
